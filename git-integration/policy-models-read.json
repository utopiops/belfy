{
    "name": "git_integration_service_read_only",
    "statements": [
        {
            "name": "read_github",
            "resource": "github/*",
            "actions": [
                "get",
                "post",
                "put",
                "delete"
            ],
            "effect": "allow"
        },
        {
            "name": "read_gitlab",
            "resource": "gitlab/*",
            "actions": [
                "get",
                "post",
                "put",
                "delete"
            ],
            "effect": "allow"
        },
        {
            "name": "read_bitbucket",
            "resource": "bitbucket/*",
            "actions": [
                "get",
                "post",
                "put",
                "delete"
            ],
            "effect": "allow"
        },
        {
            "name": "read_service_name",
            "resource": "settings/*",
            "actions": [
                "get"
            ],
            "effect": "allow"
        }
    ]
}