{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.{ts,js}", 
    "test/**/*.ts",     
    "test/**/*.js"      
  ],
  "exclude": [
    "node_modules"
  ]
}
